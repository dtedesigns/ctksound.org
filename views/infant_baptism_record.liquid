<!-- id, date, official, child, comment, type, notice_sent, published, created_at, updated_at -->
<div id="{{type}}_{{id}}"
    {% if published %}
        class="unpublished"
    {%else%}
        class="unpublished"
    {%endif%}>
    <div class="date">
        <span class="month">{{ date | date: "%b" }}</span>
        <span class="day">{{ date | date: "%d" }}</span>
        <span class="year">{{ date | date: "%Y" }}</span>
    </div>
    <img class="type" src="images/infant_baptism.png"> </img>
    <span class="record_details">
      <span class="title">{{child}}</span>
      <span class="passage">Infant Baptism</span>
      <span class="speaker">{{official}}</span>
    </span>
    <select>
        <option name="">Download</option>
        <option name="baptism">Baptism</option>
    </select>
</div>
