<div id="{{type}}_{{id}}"
    {% if published %}
        class="unpublished"
    {%else%}
        class="unpublished"
    {%endif%}>
    <div class="date">
        <span class="month">{{ date | date: "%b" }}</span>
        <span class="day">{{ date | date: "%d" }}</span>
        <span class="year">{{ date | date: "%Y" }}</span>
    </div>
    <img class="type" src="images/portrait.svg"> </img>
    <span class="record_details">
        <span class="title">Portrait of Grace - {{speaker}}</span>
      <span class="speaker">{{speaker}}</span> &bull;
      <span class="passage">{{comment}}</span>
    </span>
    <select>
        <option name="">Download</option>
        <option name="portrait">Portrait</option>
    </select>
</div>
